uint32_t audiosignal;
uint32_t audiosignal2;
int count;
uint32_t audiostack[3000];
int leerpin;


void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef* hadc)
{
	audiosignal = HAL_ADC_GetValue(&hadc1);
	HAL_ADC_Start_IT(&hadc1);

}
